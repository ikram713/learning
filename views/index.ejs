
<%- include("./partials/header") %>


<!-- As a link -->
<nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">ToDoList</a>
    </div>
  </nav>
  

    <div class="container mt-5" >
        <form action="/add/todo" method="POST" class="d-flex">
            <input type="text" name="todo" id="" class="form-controls" placeholder="Enter ToDo" >
            <input type="submit" value="Add ToDo" class="btn btn-sm btn-primary mx-2">
        </form>



        <ul class="list-group my-5">
            <% todo.forEach(todos => { %>
               <li class="list-group-item"> <%= todos.todo %> <a href="/delete/todo/<%= todos._id %>" class="btn btn-danger btn-small">Delete</a></li>
               
            <%  })  %>
          </ul>

    </div>


